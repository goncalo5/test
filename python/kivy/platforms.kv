#:kivy 1.0.9


<Platform>:
    size: app.window.width * 0.3, app.window.height * 0.1
    canvas:
        Color:
            rgba: .3, .3, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size



<Player>:
    size: app.window.width * 0.1, app.window.height * 0.2
    canvas:
        Color:
            rgba: .1, .1, .1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<Game>:
    player: player
    platform: platform

    Platform:
        id: platform
        x: root.width * 0.5
        y: root.height * 0.3

    Player:
        id: player