<SampGridLayout>:
    rows: 2

    BoxLayout:
        size_hint_y: None
        height: 100
        # spacing: 1
        background_normal: ""
        background_color: 1,1,0,1

        # Make the background for the toolbar white
        canvas:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            background_normal: 'folder2.png'
            background_down: 'folder.png'
            size_hint_x: None
            width: 100
        Button:
            background_normal: 'disk.png'
            background_down: 'disk_dn.png'
            size_hint_x: None
            width: 100
        Button:
            background_normal: 'exit.png'
            background_down: 'exit_dn.png'
            size_hint_x: None
            width: 100
        FloatLayout:
    FloatLayout:
