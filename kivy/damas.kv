#:kivy 1.0.9


<WhitePiece>:
    canvas:
        Color:
            rgba: .4, .4, 0, 1

<BlackPiece>:
    canvas:
        Color:
            rgba: .2, .2, 0, 1

<Piece>:
    size: app.window.width / app.n_cols, app.window.height / app.n_cols
    # # size_hint: 2 / app.n_cols, 2 / app.n_cols
    canvas:
        # Color:
        #     rgba: .3, .3, 0, 1
        Ellipse:
            pos: self.pos
            size: self.size



<White>:
    size: app.window.width / app.n_cols, app.window.height / app.n_cols
    canvas.before:
        Color:
            rgba: .4, .4, .4, 1
        Rectangle:
            pos: self.pos
            # size: app.window.width / app.n_cols, app.window.height / app.n_cols
            size: self.size

<Black>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: app.window.width / app.n_cols, app.window.height / app.n_cols

