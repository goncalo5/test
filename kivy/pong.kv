#:kivy 1.0.9

<PongGame>:
    ball: pong_ball
    #ball2: pong_ball2
    player1: pong_paddle
    player2: pong_paddle2

    canvas:
        Rectangle:
            pos: root.center_x - 5, 0
            size: 10, root.height
            
    Label:
        font_size: 50  
        center_x: root.width / 4
        top: max(root.top - 50, 70)
        text: str(root.player1.score)
        
    Label:
        font_size: 50  
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)

    PongBall:
        id: pong_ball
        center: self.parent.center

    #PongBall:
    #    id: pong_ball2
    #    center: self.parent.center
    
    PongPaddle:
        id: pong_paddle
        x: root.x
        center_y: root.center_y
    
    PongPaddle:
        id: pong_paddle2
        x: root.width - self.width
        center_y: root.center_y

<PongBall>:
    size: 100, 100
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PongPaddle>:
    size: 50, 100
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size
                    