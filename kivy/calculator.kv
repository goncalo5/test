# ---------- calculator.kv  ----------

# Custom button
<CustButton@Button>:
    font_size: 25
    color: 0,0,0,1

<OrageButton@CustButton>:
    background_normal: 'folder2.png'
    background_down: 'folder.png'
    background_color: 1,0.65,0.3,1
    color: 1,1,1,1
    bold: True

<WhiteButton@CustButton>:
    background_normal: ''
    background_color: 1,1,1,1

<CustBox@BoxLayout>:
    spacing: 0.5
    size_hint: 1, 0.15



# Define id so I can refer to the CalcGridLayout
# class functions
# Display points to the entry widget
<CalcGridLayout>:
    id: calculator
    display: entry
    rows: 6
    padding: 0.5
    spacing: 0.5
    # Where input is displayed
    CustBox:
        size_hint: 1, 0.25
        TextInput:
            id: entry
            font_size: 50
            bold: False
            multiline: False
            background_normal: ''
            background_color: 1,1,1,0.3
            foreground_color: 1,1,1,1
            cursor_color: 1,1,1,1
            outline_width: 10

    # When buttons are pressed update the entry
    CustBox:
        WhiteButton:
            text: "AC"
            on_press: entry.text = ""
        WhiteButton:
            text: "+/-"
            on_press: calculator.calculate(entry.text + "*-1")
        WhiteButton:
            text: "%"
            on_press: calculator.calculate(entry.text + "/100.")
        OrageButton:
            text: "/"
            on_press: entry.text += self.text

    CustBox:
        WhiteButton:
            text: "7"
            on_press: entry.text += self.text
        WhiteButton:
            text: "8"
            on_press: entry.text += self.text
        WhiteButton:
            text: "9"
            on_press: entry.text += self.text
        OrageButton:
            text: "*"
            on_press: entry.text += self.text

    CustBox:
        WhiteButton:
            text: "4"
            on_press: entry.text += self.text
        WhiteButton:
            text: "5"
            on_press: entry.text += self.text
        WhiteButton:
            text: "6"
            on_press: entry.text += self.text
        OrageButton:
            text: "-"
            on_press: entry.text += self.text

    CustBox:
        WhiteButton:
            text: "1"
            on_press: entry.text += self.text
        WhiteButton:
            text: "2"
            on_press: entry.text += self.text
        WhiteButton:
            text: "3"
            on_press: entry.text += self.text
        OrageButton:
            text: "+"
            on_press: entry.text += self.text

    # When equals is pressed pass text in the entry
    # to the calculate function
    CustBox:
        WhiteButton:
            text: "0"
            size_hint: 0.5, 1
            on_press: entry.text += self.text
        WhiteButton:
            text: "."
            size_hint: 0.25, 1
            on_press: calculator.calculate(entry.text)
        OrageButton:
            text: "="
            size_hint: 0.25, 1
            on_press: calculator.calculate(entry.text)
